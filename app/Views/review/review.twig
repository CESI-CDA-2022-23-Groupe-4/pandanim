{% extends "base.twig" %}


{% block body %}
    <h1>test liste commentaire</h1>
{% if data is defined%}
    <ul>
        {% for review in data %}
            <table class="table table-striped table-bordered">
            <tr>
                <th>anime_id</th>
                <th>User</th>
                <th>Comment</th>
                <th>Action</th>
            </tr>
            <tr>
                <td>{{review.anime_id}}</td>
                <td>{{review.username}}</td>
                <td>{{review.comment}}</td>
                <td>
                    <a href="{{base_url()}}/review/edit/{{review.anime_id}}/{{review.user_id}}" type="button" class="btn btn-secondary">Edit</a>
                    <a type="button" class="btn btn-danger">Delete</a>
                </td>
            </tr>
            </table>
        {% endfor %}
    </ul>
    
{% endif %}

{% endblock %}