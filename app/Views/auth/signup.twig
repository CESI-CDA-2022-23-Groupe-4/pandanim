{% extends "base.twig" %}

{% block title %}Sign Up{% endblock %}

{% block body %}

    <h1>Sign Up</h1>

    {% for err in data.arrErrors %}
        {{ err }}
        <br>
    {% endfor %}

    {{data.form_open|raw}}
    <div class="mt-2">{{data.label_username|raw}}
    <div>{{data.form_username|raw}}</div>
    <div class="mt-2">{{data.label_firstname|raw}}</div>
    <div>{{data.form_firstname|raw}}</div>
    <div class="mt-2">{{data.label_lastname|raw}}</div>
    <div>{{data.form_lastname|raw}}</div>
    <div class="mt-2">{{data.label_email|raw}}</div>
    <div>{{data.form_email|raw}}</div>
    <div class="mt-2">{{data.label_password|raw}}</div>
    <div>{{data.form_password|raw}}</div>
    <div class="mt-2">{{data.label_pass_confirm|raw}}</div>
    <div>{{data.form_pass_confirm|raw}}</div>
    <div class="mt-2">{{data.form_submit|raw}}</div>
    <div class="mt-2">{{data.form_close|raw}}</div>

    <p><a href="{{('/signin')}}" class="btn btn-outline-success">Sign In</a></p>
{% endblock %}