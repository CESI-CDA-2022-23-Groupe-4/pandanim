{% extends "base.twig" %}

{% block title %}
    {{data.title}}
{% endblock %}

{% block body %}
<div class="d-flex flex-column align-items-center bg-dark text-white mt-4 container">
<div class="d-flex flex-column align-items-center">
    <h1 class='mt-3 mb-4'>{{data.title}}</h1>

        <img src="{{data.large_image_url}}" alt="{{data.title}}'s image" width='800px' class='mb-5'>
        <ul class="nav nav-tabs" id="animeTab" role="tablist">
            <li class="nav-item" role="presentation">
                <button class="nav-link active" id="animeDescription" data-bs-toggle="tab" data-bs-target="#animeDescription-pane" type="button" role="tab" aria-controls="animeDescription-pane" aria-selected="true">Description</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="info" data-bs-toggle="tab" data-bs-target="#info-pane" type="button" role="tab" aria-controls="info-pane" aria-selected="false">infos</button>
            </li>
            <li class="nav-item" role="presentation">
                <button class="nav-link" id="contact-tab" data-bs-toggle="tab" data-bs-target="#contact-tab-pane" type="button" role="tab" aria-controls="contact-tab-pane" aria-selected="false">trailer</button>
            </li>
        </ul>
        <div class="tab-content" id="animeTabContent">
            <div class="tab-pane fade show active mt-4" id="animeDescription-pane" role="tabpanel" aria-labelledby="animeDescription" tabindex="0">
                {{data.synopsis}}
            </div>
            <div class="tab-pane fade " id="info-pane" role="tabpanel" aria-labelledby="info" tabindex="0">
                <table class="table striped text-white">

                    <tr>
                        <td>Type</td>
                        <td>{{data.type}}</td>
                    </tr>
                    <tr>
                        <td>Episodes</td>
                        <td>{{data.episodes}}</td>
                    </tr>
                    <tr>
                        <td>Status</td>
                        <td>{{data.status}}</td>
                    </tr>
                    <tr>
                        <td>aired from</td>
                        <td>{{data.aired_from}}</td>
                    </tr>
                    <tr>
                        <td>Score</td>
                        <td>{{data.mal_score}} / 10</td>
                    </tr>
                    <tr>
                        <td>Scored by</td>
                        <td>{{data.scored_by}} people</td>
                    </tr>
                    <tr>
                        <td>Rating</td>
                        <td>{{data.rating}}</td>
                    </tr>
                    
                </table>
            </div>
            </div>
            <div class="tab-pane fade d-flex flex-column align-items-center" id="contact-tab-pane" role="tabpanel" aria-labelledby="contact-tab" tabindex="0">
                {% if data.trailer %}
                   <iframe class=" mt-5 mb-3" width="960" height="620" src="https://www.youtube.com/embed/{{data.trailer}}" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
                   {% else %}
                   No trailer available  
                {% endif %}
            </div>
        </div>
</div>
   






{% endblock %}